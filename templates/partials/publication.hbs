<div class="publication row mb-5 align-items-start">
  <!-- Left: project image -->
  <div class="col-12 col-md-3 mb-3 mb-md-0">
    <img
      src="{{image.src}}"
      alt="{{image.alt}}"
      class="img-fluid img-thumbnail"
      style="cursor: pointer;"
      data-bs-toggle="modal"
      data-bs-target="#imageModal-{{id}}"
      data-bs-src="{{image.src}}"
    >
  </div>
  <!-- Right: content -->
  <div class="col-12 col-md-9">

    <!-- Published & Journal at top -->
    <div class="mb-2">
      <!-- Status badge -->
      {{#if (eq status "Published")}}
        <span class="badge bg-success">{{status}}</span>
      {{else if (eq status "In Progress")}}
        <span class="badge bg-warning text-dark">{{status}}</span>
      {{else if (eq status "Resubmit")}}
        <span class="badge bg-info text-dark">{{status}}</span>
      {{else if (eq status "Under Review")}}
        <span class="badge bg-info text-dark">{{status}}</span>
      {{else}}
        <span class="badge bg-secondary">{{status}}</span>
      {{/if}}
      <small class="text-secondary">{{journal}}</small>
    </div>

    <!-- Title & Authors -->
    <h5 class="mb-2">{{title}}</h5>
    <h6 class="text-muted mb-2">
      {{#each authors}}
        {{this}}{{#unless @last}}, {{/unless}}
      {{/each}}
    </h6>

    <!-- Keywords -->
    <div class="mb-3">
      {{#if keywords}}
        {{#each keywords}}
          <span class="badge bg-secondary {{#unless @last}}me-1{{/unless}}">{{this}}</span>
        {{/each}}
      {{/if}}
    </div>

    <!-- Link -->
    {{#if link}}
    <p class="mb-2">
      <a href="{{link}}" class="text-decoration-none" target="_blank" rel="noopener">
        view full article
      </a>
    </p>
    {{/if}}

    <!-- Short Summary -->
    <h6 class="mb-1">Short Summary</h6>
    <p class="mb-2">{{shortSummary}}</p>

    {{#if futureDirections}}
      <p class="mb-2"><strong>Future Directions:</strong> {{futureDirections}}</p>
    {{/if}}

    <!-- Collapse trigger for Long Summary -->
    {{#if longSummary}}
      <p class="mb-2">
        <a
          class="nav-link text-decoration-none d-inline-flex align-items-center p-0"
          data-bs-toggle="collapse"
          href="#longSummary-{{id}}"
          role="button"
          aria-expanded="false"
          aria-controls="longSummary-{{id}}">
        <i class="fas fa-chevron-down me-2"></i>
          <span class="toggle-text">Show Long Summary</span>
        </a>
      </p>

      <div class="collapse" id="longSummary-{{id}}">
        {{#each longSummary}}
          <p>{{this}}</p>
        {{/each}}
      </div>
    {{/if}}

  </div>
</div>

<!-- 2. The Modal (place near the end of <body>) -->
<div
  class="modal fade"
  id="imageModal-{{id}}"
  tabindex="-1"
  aria-labelledby="imageModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-fullscreen">
    <div class="modal-content bg-transparent border-0">
      <div class="modal-body p-0 text-center">
        <img src="{{image.src}}" alt="{{image.alt}}" class="img-fluid" id="modalImage-{{id}}">
      </div>
      <button
        type="button"
        class="btn-close position-absolute top-0 end-0 m-3"
        data-bs-dismiss="modal"
        aria-label="Close"
      ></button>
    </div>
  </div>
</div>